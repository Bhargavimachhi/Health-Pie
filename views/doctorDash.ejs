<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="../style/doctordash.css" rel="stylesheet">
 <link rel="stylesheet" href="output.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
  <script src="https://cdn.anychart.com/releases/8.11.0/js/anychart-base.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
  crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<style>
    .sidebar{
        margin-top: 70px;
        /* padding-top: 20px; */
    }
</style>
<body class="">
    <div class="h-screen mt-5">
    <div class="grid grid-cols-3   h-screen gap-3">
  <div class="container w-full  text-center max-w-64  font-bold bg-gray-100 text-black  justify-center  ">  
  
    <ul class="sidebar flex  flex-col  text-center p-9  text-gray-800 font-bold border-gray-900 gap-8 text-sm text-black">
        <li class="flex  ">   
        <i class="fa-solid fa-user text-[#D32243]" ></i>
            <a href="#" class="pl-3">Dashboard </a></li>
        <li class=" flex  ">
        <i class="fa-solid fa-right-from-bracket"></i>
            <a href="index.html" class="pl-3">Logout</a> 
        </li>
        </li>
    </ul>
  </div>

    <div class=" mt-[80px] grid-rows-2   grid  max-w-6xl relative right-20">


        <div class="name container  space-y-6 ">
            <div class="content relative">
                <h1 class="flex items-center justify-center font-bold text-[60px] ">Your Appoinments</h1>
        </div>
            <div>
                <ul class="list-group" id="myList" style="text-decoration: none;"></ul>
                <% console.log(data); for(let curr of data.appoinments){  %>
                    <li class="list-group-item">
                        <h2>Name : <%= curr.name %></h2>
                        <h3>Contact : <%= curr.contact %></h3>
                        <h3>Message : <%= curr.msg %></h3>
                    </li><br>
                <% } %> 
                </ul>
            </div>
        </div>
   
    </div>
    <div class=" mx-11 bg-gray-100  h-screen mt-[80px] p-[34px]">

        <div class="flex flex-col justify-center items-center bg-white drop-shadow-md rounded-lg  w-full  shadow-b-">
            <img class=" mt-2 p-1 w-28 h-36 rounded-full bg-blue-300 border-4 border-slate-50 object-cover  "
                src="images/doctor1.png" />
            <div class="flex flex-col pl-[2rem] py-[1.5rem]">
                <h4 class="font-bold text-lg text-[#D32243]">Name : <%= data.username %></h4>
                <p class="mt-1 flex-1 font-light text-sm text-slate-300">Doctor</p>
            </div>
    </div>
    <div class=" flex flex-col gap-3 pt-5 text-black items-center pb-3">
       <p><b>Experience :</b> <%= data.experience%></p>
       <p><b>Location :</b> <%= data.language %></p>
       <p><b>Speciality</b>
        <button class="border-blue-400 border-2 rounded-lg p-2 bg-white text-blue-300 font-semibold
        "><%= data.speciality %></button>   
        
    </p>
    
    </div>
  
</div>
</div>
</body>
</html>